<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_songly"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/visualizer_button_main"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/button_visualizer"
        android:text="@string/visualizer"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/songly_button_main"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/button_songly"
        android:text="@string/songly"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="10"
        app:layout_constraintBottom_toTopOf="@+id/studio_button_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visualizer_button_main" />

    <Button
        android:id="@+id/studio_button_main"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="@color/button_studio"
        android:text="@string/studio"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:shadowColor="#FFFFFF"
        android:shadowRadius="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>